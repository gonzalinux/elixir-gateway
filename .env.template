# ExGateway Environment Variables
# Copy to .env and update values for your environment

# SSL/TLS - Let's Encrypt (recommended)
LETSENCRYPT_DOMAINS="api.yourdomain.com,service1.yourdomain.com"
LETSENCRYPT_EMAIL="admin@yourdomain.com"
# LETSENCRYPT_STAGING="true"  # Use for testing
# LETSENCRYPT_ENABLED="true"  # Enable in development

# SSL/TLS - Certificate storage
# SITE_ENCRYPT_DB="/opt/elixir_gateway/certs"  # Certificate storage path

# Application
# SECRET_KEY_BASE="generate-with-mix-phx-gen-secret"

# Network
# HTTP_PORT="4000"
# HTTPS_PORT="4001" 
# BIND_IP="0.0.0.0"

# Logging
# LOG_LEVEL="info"
# EXGATEWAY_LOG_LEVEL="info"

# Performance
# FINCH_POOL_SIZE="25"
# FINCH_MAX_IDLE_TIME="30000"